<%- include('partials/header') %>

<section class="panel">
    <div class="panel-header">
        <h1>Actualizar Paciente</h1>
    </div>
    <div class="panel-body">
        <form class="form" action="/paciente/pacientes/<%= paciente.id %>?_method=PUT" method="POST">
            <div class="form-row">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" value="<%= paciente.nombre %>" required>
            </div>
            <div class="form-row">
                <label for="apellidos">Apellidos</label>
                <input type="text" id="apellidos" name="apellidos" value="<%= paciente.apellidos %>" required>
            </div>
            <div class="form-row">
                <label for="fechaDeNacimiento">Fecha de Nacimiento</label>
                <input type="date" id="fechaDeNacimiento" name="fechaDeNacimiento" value="<%= paciente.fechaDeNacimiento.toISOString().split('T')[0] %>" required>
            </div>
            <div class="form-row">
                <button class="btn btn-primary" type="submit">Actualizar Paciente</button>
                <a class="btn btn-outline" href="/">Cancelar</a>
            </div>
        </form>
    </div>
</section>

<%- include('partials/footer') %>